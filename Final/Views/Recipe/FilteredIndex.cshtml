@model IEnumerable<Final.Models.Recipe>

@{
    ViewData["Title"] = "Filtered Recipes";
}

<h1>Recipes for @ViewBag.CategoryName</h1>

<p>
    <a asp-action="Create">Create New</a> |
    <a asp-action="Index">Show All Recipes</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Ingredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Instructions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingredients)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Instructions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RecipeID">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.RecipeID" asp-route-category="@item.Category">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.RecipeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
