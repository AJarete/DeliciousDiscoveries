<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Categories</a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Recipe" asp-action="FilterByCategory" asp-route-categoryName="@category.Name">@category.Name</a>
            </li>
        }
    </ul>
</li>